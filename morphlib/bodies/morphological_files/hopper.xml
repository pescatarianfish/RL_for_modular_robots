{% set morph_params=morph_params | default({
    'link1' : 0.40,
    'link2' : 0.45,
    'link3' : 0.50,
    'link4' : 0.39
}) %}

{% set morph_limits=morph_limits | default({
    'link1' : [0.3, 0.8],
    'link2' : [0.3, 0.8],
    'link3' : [0.3, 0.8],
    'link4' : [0.3, 0.8]
}) %}

{% set mp=morph_params %}

<mujoco model="base">
    <compiler angle="degree" coordinate="global" inertiafromgeom="true"/>
    <option integrator="RK4" timestep="0.001">
        <flag warmstart="disable" />
    </option>
    
    <asset>
        <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" width="512" height="512"/>
        <material name="MatGnd" reflectance="0.5" texture="texplane" texrepeat="1 1" texuniform="true" />
        <texture name="texgeom" builtin="flat" height="1278" mark="cross" markrgb="1 1 1"  random="0.01" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127"/>
        <material name="geom" texture="texgeom" texuniform="true"/>
        <material name="red_target" rgba="0.847 0.066 0.349 1"/>
    </asset>
    <default>

        <joint armature="1" damping="1" limited="true"/>
        <geom conaffinity="1" condim="1" contype="1" margin="0.001" material="geom" rgba="0.8 0.6 .4 1" solimp=".8 .8 .01" solref=".02 1"/>
        <motor ctrllimited="true" ctrlrange="-.4 .4"/>
        <!-- two tangential, one torsional, two rolling (with condim=3 I only used the first two tangential)-->
        <!-- <default class="foot-floor">
            <pair condim="3" friction="2.5 2.5 0.01 0.1 0.1"/>
        </default> -->
    </default>

    <visual>
        <map znear="0.02"/>
    </visual>

    <worldbody>
        <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
        <geom name="floor" conaffinity="1" condim="3" pos="0 0 0" rgba="0.8 0.9 0.8 1" size="20 20 .125" type="plane" material="MatGnd"/>

        <body name="robot" pos="0 0 {{mp['link1']/2+mp['link2']+mp['link3']+0.1}}">
            <camera name="track" mode="trackcom" pos="0 -3 1" xyaxes="1 0 0 0 0 1"/>
            <joint armature="0" axis="1 0 0" damping="0" limited="false" name="rootx" pos="0 0 0" stiffness="0" type="slide"/>
            <joint armature="0" axis="0 0 1" damping="0" limited="false" name="rootz" pos="0 0 0" ref="1.25" stiffness="0" type="slide"/>
            <joint armature="0" axis="0 1 0" damping="0" limited="false" name="rooty" pos="0 0 {{mp['link1']/2+mp['link2']+mp['link3']+0.1}}" stiffness="0" type="hinge"/>
            <geom friction="0.9" fromto="0 0 {{mp['link1']+mp['link2']+mp['link3']+0.1}} 0 0 {{mp['link2']+mp['link3']+0.1}}" name="torso_geom" size="0.05" type="capsule"/>
            <body name="thigh" pos="0 0 1.05">
            <joint axis="0 -1 0" name="thigh_joint" pos="0 0 {{mp['link2']+mp['link3']+0.1}}" range="-150 0" type="hinge"/>
            <geom friction="0.9" fromto="0 0 {{mp['link2']+mp['link3']+0.1}} 0 0 {{mp['link3']+0.1}}" name="thigh_geom" size="0.05" type="capsule"/>
            <body name="leg" pos="0 0 0.35">
                <joint axis="0 -1 0" name="leg_joint" pos="0 0 {{mp['link3']+0.1}}" range="-150 0" type="hinge"/>
                <geom friction="0.9" fromto="0 0 {{mp['link3']+0.1}} 0 0 0.1" name="leg_geom" size="0.04" type="capsule"/>
                <body name="foot" pos="{{mp['link4']/6}} 0 0.1">
                <joint axis="0 -1 0" name="foot_joint" pos="0 0 0.1" range="-45 45" type="hinge"/>
                <geom friction="2.0" fromto="-{{mp['link4']/3}} 0 0.1 {{mp['link4']*2/3}} 0 0.1" name="foot_geom" size="0.06" type="capsule"/>

                {# This puts the marker at the ankle #}
                {# <site name="foot" pos="0 0.0 0.1" size="0.02" material="red_target" /> #}
                {# This puts the marker below the ankle #}
                <site name="foot" pos="0 0.0 0.04" size="0.02" material="red_target" />
                {# This puts the market at the tip #}
                {# <site name="foot" pos="{{ mp['link4']*2/3 + 0.05}} 0.0 0.1" size="0.02" material="red_target" /> #}
                </body>
            </body>
            </body>
        </body>

    </worldbody>

    <contact>

        <!-- <pair class="foot-floor" geom1="foot_geom" geom2="floor" /> -->

    </contact>

    <actuator>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="thigh_joint"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="leg_joint"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="foot_joint"/>
    </actuator>
</mujoco>