{% set morph_params=morph_params | default({
    'link1' : 0.40,
    'link2' : 0.45,
    'link3' : 0.60,
    'link4' : 0.2
}) %}

{% set morph_limits=morph_limits | default({
    'link1' : [0.3, 0.6],
    'link2' : [0.35, 0.65],
    'link3' : [0.5, 0.7],
    'link4' : [0.2, 0.35]
}) %}

{% set mp=morph_params %}

<mujoco model="base">
    <compiler angle="degree" coordinate="global" inertiafromgeom="true"/>
    <option integrator="RK4" timestep="0.001">
        <flag warmstart="disable" />
    </option>

    <asset>
        <texture name="texplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" width="512" height="512"/>
        <material name="MatGnd" reflectance="0.5" texture="texplane" texrepeat="1 1" texuniform="true" />
        <material name="red" rgba="0.847 0.066 0.349 1"/>
        <material name="blue" rgba="0.047 0.166 0.949 1"/>
        <material name="yellow" rgba="0.947 0.966 0.149 1"/>
        <material name="green" rgba="0.047 0.966 0.349 1"/>
        <material name="pink" rgba="0.947 0.066 0.999 1"/>
    </asset>
    
    <default>
        <joint armature="0.01" damping=".1" limited="true"/>
        <geom conaffinity="0" condim="3" contype="1" density="1000" friction=".7 .1 .1" rgba="0.8 0.6 .4 1"/>
    </default>

    <visual>
    </visual>

    <worldbody>
        <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
        <geom name="floor" conaffinity="1" condim="3" pos="0 0 0" rgba="0.8 0.9 0.8 1" size="20 20 .125" type="plane" material="MatGnd"/>

        <body name="torso" pos="0 0 {{ mp['link2'] + mp['link3'] + mp['link1']/2 }}">
            <site name="torso_track" pos="0 0 {{ mp['link2'] + mp['link3'] + mp['link1']/2 }}" size="0.02" material="red" />
        <camera name="track" mode="trackcom" pos="0 -3 1" xyaxes="1 0 0 0 0 1"/>
        <joint armature="0" axis="1 0 0" damping="0" limited="false" name="rootx" pos="0 0 0" stiffness="0" type="slide"/>
        <joint armature="0" axis="0 0 1" damping="0" limited="false" name="rootz" pos="0 0 0" ref="{{ mp['link2'] + mp['link3'] + mp['link1']/2 }}" stiffness="0" type="slide"/>
        <joint armature="0" axis="0 1 0" damping="0" limited="false" name="rooty" pos="0 0 {{ mp['link2'] + mp['link3'] + mp['link1']/2 }}" stiffness="0" type="hinge"/>
        <geom friction="0.9" fromto="0 0 {{ mp['link2'] + mp['link3'] + mp['link1'] }} 0 0 {{ mp['link2'] + mp['link3'] }}" name="torso_geom" size="0.05" type="capsule"/>
        <body name="thigh" pos="0 0 {{mp['link2'] + mp['link3']}}">
            <site name="rthigh_track" pos="0 0 {{mp['link2'] + mp['link3']}}" size="0.02" material="yellow" />
            <joint axis="0 -1 0" name="thigh_joint" pos="0 0 {{mp['link2'] + mp['link3']}}" range="-150 0" type="hinge"/>
            <geom friction="0.9" fromto="0 0 {{mp['link2'] + mp['link3']}} 0 0 {{mp['link3']}}" name="thigh_geom" size="0.05" type="capsule"/>
            <body name="leg" pos="0 0 0.35">
            <site name="rleg_track" pos="0 0 {{mp['link3']}}" size="0.02" material="blue" />
            <joint axis="0 -1 0" name="leg_joint" pos="0 0 {{mp['link3']}}" range="-150 0" type="hinge"/>
            <geom friction="0.9" fromto="0 0 {{mp['link3']}} 0 0 0.1" name="leg_geom" size="0.04" type="capsule"/>
            <body name="foot" pos="0.2 0 0.1">
                <site name="rfoot_track" pos="0 0 0.1" size="0.02" material="pink" />
                <joint axis="0 -1 0" name="foot_joint" pos="0 0 0.1" range="-45 45" type="hinge"/>
                <geom friction="0.9" fromto="-0.0 0 0.1 {{mp['link4']}} 0 0.1" name="foot_geom" size="0.06" type="capsule"/>
                <site name="rfoottip_track" pos="{{mp['link4']+0.04}} 0.0 0.06" size="0.02" material="green" />

            </body>
            </body>
        </body>
        <!-- copied and then replace thigh->thigh_left, leg->leg_left, foot->foot_right -->
        <body name="thigh_left" pos="0 0 {{mp['link2'] + mp['link3']}}">
            <site name="lthigh_track" pos="0 0 {{mp['link2'] + mp['link3']}}" size="0.02" material="yellow" />
            <joint axis="0 -1 0" name="thigh_left_joint" pos="0 0 {{mp['link2'] + mp['link3']}}" range="-150 0" type="hinge"/>
            <geom friction="0.9" fromto="0 0 {{mp['link2'] + mp['link3']}} 0 0 {{mp['link3']}}" name="thigh_left_geom" rgba=".7 .3 .6 1" size="0.05" type="capsule"/>
            <body name="leg_left" pos="0 0 0.35">
            <site name="lleg_track" pos="0 0 {{mp['link3']}}" size="0.02" material="blue" />
            <joint axis="0 -1 0" name="leg_left_joint" pos="0 0 {{mp['link3']}}" range="-150 0" type="hinge"/>
            <geom friction="0.9" fromto="0 0 {{mp['link3']}} 0 0 0.1" name="leg_left_geom" rgba=".7 .3 .6 1" size="0.04" type="capsule"/>
            <body name="foot_left" pos="0.2 0 0.1">
                <site name="lfoot_track" pos="0 0 0.1" size="0.02" material="pink" />
                <joint axis="0 -1 0" name="foot_left_joint" pos="0 0 0.1" range="-45 45" type="hinge"/>
                <geom friction="1.9" fromto="-0.0 0 0.1 {{mp['link4']}} 0 0.1" name="foot_left_geom" rgba=".7 .3 .6 1" size="0.06" type="capsule"/>
                <site name="lfoottip_track" pos="{{mp['link4']+0.04}} 0.0 0.06" size="0.02" material="green" />

            </body>
            </body>
        </body>
        </body>

    </worldbody>

    <contact>

    </contact>

    <actuator>
        <!-- <motor joint="torso_joint" ctrlrange="-100.0 100.0" isctrllimited="true"/>-->
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="thigh_joint"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="leg_joint"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="foot_joint"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="thigh_left_joint"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="leg_left_joint"/>
        <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="foot_left_joint"/>
        <!-- <motor joint="finger2_rot" ctrlrange="-20.0 20.0" isctrllimited="true"/>-->
    </actuator>
</mujoco>